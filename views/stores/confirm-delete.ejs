<%- include('../partials/header') %>

<span class='main-header gfont'><%= store.name %> &mdash; Delete store</span>
<hr/>

<form
  action='/stores/<%= store._id %>?_method=DELETE'
  method='POST'
  class='warning-form'
>
  <label class='warning-text'><strong>Are you sure?</strong></label>
  <p class='warning-text'>
    Confirming will result in <em>permanent</em> deletion.
  </p>
  <p class='warning-text'>
    Your store will not be retrievable, and all information will be lost.
  </p>
  
  <label class='warning-text'><strong>
    Type your store name to confirm:
  </strong></label>
  <input name='name' type='text' required/>

  <button type='submit'>Delete store</button>
</form>

<% if (deleteError) { %>
  <div class='error-text'>
    <p><strong>Did not match store name.</strong></p>
    <p>If you still want to delete, try again.</p>
  </div>
<% } %>

<%- include('../partials/footer') %>
